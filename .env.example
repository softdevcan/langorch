# Application
APP_NAME=LangOrch
APP_ENV=development
APP_DEBUG=true
APP_VERSION=0.1.0

# API
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=langorch
POSTGRES_PASSWORD=changeme_postgres_password
POSTGRES_DB=langorch
DATABASE_URL=postgresql+asyncpg://langorch:changeme_postgres_password@localhost:5432/langorch

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=changeme_redis_password
REDIS_DB=0
REDIS_URL=redis://:changeme_redis_password@localhost:6379/0

# Vector Database - Qdrant
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=

# Security
SECRET_KEY=changeme_secret_key_min_32_characters_long_random_string
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# HashiCorp Vault (Faz 2'de kullanılacak)
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=
VAULT_NAMESPACE=

# LLM Providers (Faz 3'te kullanılacak)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
OLLAMA_BASE_URL=http://localhost:11434

# LangSmith (Optional - Monitoring)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=
LANGCHAIN_PROJECT=langorch

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]
